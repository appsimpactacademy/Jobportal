<div class="card shadow">
  <div class="card-body">
    <h3 class="text-primary mb-2">Manage your notification settings</h3>

    <% if @setting.persisted? %>
      <% setting_url = notification_setting_path(@setting) %>
      <% setting_method_type = :patch %>
    <% else %>
      <% setting_url = notification_settings_path %>
      <% setting_method_type = :post %>
    <% end %>

    <%= form_with(model: @settings, url: setting_url, method: setting_method_type) do |form| %>
      <div class="form-group">
        <%= form.label 'When a new job posted', class: 'mb-2 mt-3 fw-bold' %>
        <%= form.check_box :on_new_job_post, checked: @setting.on_new_job_post %>
      </div>
      <div class="form-group">
        <%= form.label 'When a job from my favourite list get removed', class: 'mb-2 mt-3 fw-bold' %>
        <%= form.check_box :on_removal_of_favourite_job, checked: @setting.on_removal_of_favourite_job %>
      </div>
      <div class="form-group">
        <%= form.label 'When a job removed', class: 'mb-2 mt-3 fw-bold' %>
        <%= form.check_box :on_removal_of_existing_job, checked: @setting.on_removal_of_existing_job %>
      </div>
      <div class="form-group">
        <%= form.label 'When status changed for my applied job', class: 'mb-2 mt-3 fw-bold' %>
        <%= form.check_box :on_status_changed_on_applied_job, checked: @setting.on_status_changed_on_applied_job %>
      </div>
      <div class="form-group">
        <%= form.label 'When status of a job changed', class: 'mb-2 mt-3 fw-bold' %>
        <%= form.check_box :on_job_status_change, checked: @setting.on_job_status_change %>
      </div>
      <div class="form-group mt-4 mb-5">
        <%= form.submit 'Update Settings', class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>
  </div>
</div>
