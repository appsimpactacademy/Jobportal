<div class="card shadow mt-5">
  <div class="card-body">
    <h3 class="text-primary mb-4">Manage your notification settings</h3>

    <% if @setting.persisted? %>
      <% setting_url = notification_setting_path(@setting) %>
      <% setting_method_type = :patch %>
    <% else %>
      <% setting_url = notification_settings_path %>
      <% setting_method_type = :post %>
    <% end %>

    <%= form_with(model: @settings, url: setting_url, method: setting_method_type) do |form| %>
      <div class="form-check">
        <%= form.check_box :on_new_job_post, checked: @setting.on_new_job_post, class: 'form-check-input' %>
        <%= form.label 'When a new job posted', class: 'form-check-label mb-3', for: 'on_new_job_post' %>
      </div>
      <div class="form-group">
        <%= form.check_box :on_removal_of_favourite_job, checked: @setting.on_removal_of_favourite_job, class: 'form-check-input' %>
        <%= form.label 'When a job from my favourite list get removed', class: 'form-check-label mb-3', for: 'on_removal_of_favourite_job' %>
      </div>
      <div class="form-group">
        <%= form.check_box :on_removal_of_existing_job, checked: @setting.on_removal_of_existing_job, class: 'form-check-input' %>
        <%= form.label 'When a job removed', class: 'form-check-label mb-3', for: 'on_removal_of_existing_job' %>
      </div>
      <div class="form-group">
        <%= form.check_box :on_status_changed_on_applied_job, checked: @setting.on_status_changed_on_applied_job, class: 'form-check-input' %>
        <%= form.label 'When status changed for my applied job', class: 'form-check-label mb-3', for: 'on_status_changed_on_applied_job' %>
      </div>
      <div class="form-group">
        <%= form.check_box :on_job_status_change, checked: @setting.on_job_status_change, class: 'form-check-input' %>
        <%= form.label 'When status of a job changed', class: 'form-check-label mb-3', for: 'on_job_status_change' %>
      </div>
      <div class="form-group mt-4 mb-5">
        <%= form.submit 'Update Settings', class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>
  </div>
</div>
