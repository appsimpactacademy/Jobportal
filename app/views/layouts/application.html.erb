<!DOCTYPE html>
<html>
  <head>
    <title>JobPosting</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render 'shared/header' %>
    <div class="container">
      <%= render 'shared/flash' %>
      <div class="row">
        <% if user_signed_in? && current_user.employer? && !params[:public_view].present? %>
          <div class="col-lg-3">
            <%= render 'shared/employer_sidebar' %>
          </div>
          <div class="col-lg-9">
            <%= yield %>
          </div>
        <% else %>
          <div class="col-lg-12">
            <%= yield %>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
