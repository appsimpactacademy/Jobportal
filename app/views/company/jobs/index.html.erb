<div class="row mt-5">
  <div class="col-lg-8 mx-auto">

    <%= link_to "Post New Job", new_company_job_path, class: "btn btn-primary btn-lg mb-4 shadow" %>

    <% @jobs.each do |job| %>
      <div class="card shadow mb-3">
        <div class="card-body">
          <p class="lead fw-bold text-primary"><%= job.title %></p>
          <div class="row">
            <div class="col-lg-3">
              <p class="fw-bold text-secondary my-1">Applicable for</p>
              <small class=""><%= job.applicable_for %></small>
            </div>
            <div class="col-lg-3">
              <p class="fw-bold text-secondary my-1">Salary Range</p>
              <small class=""><%= job.salary_range %></small>
            </div>
            <div class="col-lg-3">
              <p class="fw-bold text-secondary my-1">Total Positions</p>
              <small class=""><%= job.total_positions %></small>
            </div>
            <div class="col-lg-3">
              <p class="fw-bold text-secondary my-1">Posted On</p>
              <small class=""><%= job.created_at.strftime("%d %b, %Y") %></small>
            </div>
            <div class="col-lg-12">
              <%= link_to 'View job', company_job_path(job), class: 'btn btn-primary mt-3' %>
              <%= link_to 'Edit job', edit_company_job_path(job), class: 'btn btn-info mt-3' %>
              <%= link_to 'Delete job', company_job_path(job), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this job? This action can not be undo.' }, class: 'btn btn-danger mt-3' %>
              <% if job.inactive_for_job_seekers? %>
                <%= link_to 'Not active for job seekers', "javascript:void(0)", class: 'btn btn-outline-danger mt-3' %>
              <% else %>
                <%= link_to 'View as Job Seeker', job, class: 'btn btn-outline-primary mt-3', target: :_blank %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
